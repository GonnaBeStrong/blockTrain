<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sixoneseven.blocktrain.repo.mapper.UserMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.sixoneseven.blocktrain.repo.entity.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 根据ID查询用户 -->
    <select id="getUser" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT id,name,password
        FROM user
        WHERE id = #{id,jdbcType=BIGINT}
    </select>

    <!-- 插入用户 -->
    <insert id="insert" parameterType="com.sixoneseven.blocktrain.repo.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (
            name,
            password
        ) VALUES (
                     #{name,jdbcType=VARCHAR},
                     #{password,jdbcType=VARCHAR}
                 )
    </insert>

    <!-- 更新用户 -->
    <update id="update" parameterType="com.sixoneseven.blocktrain.repo.entity.User">
        UPDATE user
        <set>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                password = #{password,jdbcType=VARCHAR},
            </if>
        </set>
        WHERE id = #{id,jdbcType=BIGINT}
    </update>

</mapper>